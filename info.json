
{

    "name"    : "Notepad",
    "version" : "1.0",
    "stage"   : "beta",
    "api"     : "a100d2",

    "language" : {

        "default" : "en-en",
        "list"    : [ "en-en" ]

    },

    "device" : {

        "desktop" : {

            "primary" : "main",
            "service" : [],
            "common"  : {

                "css"    : [],
                "script" : [],
                "start"  : []

            },

            "view" : {

                "main" : {

                    "template" : "main.html",

                    "maxizable" : true,
                    "resizable" : true,

                    "width"  : {

                        "default" : 750,
                        "min"     : 600,
                        "max"     : 0

                    },

                    "height" : {

                        "default" : 500,
                        "min"     : 400,
                        "max"     : 0

                    },

                    "css"    : ["style.css"],
                    "script" : ["script.js","textarea_autosize.min.js"]

                }

            }

        },

        "mobile" : {

            "primary" : "main",
            "service" : [],
            "common"  : {

                "css"    : [],
                "script" : [],
                "start"  : []

            },

            "view" : {

                "main" : {

                    "template" : "mainMobile.html",

                    "maxizable" : true,
                    "resizable" : true,

                    "width"  : {

                        "default" : 750,
                        "min"     : 600,
                        "max"     : 0

                    },

                    "height" : {

                        "default" : 500,
                        "min"     : 400,
                        "max"     : 0

                    },

                    "css"    : ["styleMobile.css"],
                    "script" : ["scriptMobile.js"]

                }

            }

        }

    },

    "permission" : {

        "fs" : {

            "modify" : true,
            "read"   : true

        }

    }

}
